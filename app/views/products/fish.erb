<% @product2.each do |product2| %>
  <div class='list'>
    <div class='product-img-content'>
      <%= image_tag product2.image, class: "product-img" %>
    </div>
    <div class='product-info'>
      <h3 class='product-name'>
        <%= product2.product_name %>
      </h3>
      <div class='product-company'>
        <span><%= product2.company.name %></span>
      </div>
    </div>
  </div>
<% end %>
