<% @product7.each do |product7| %>
  <div class='list'>
    <div class='product-img-content'>
      <%= image_tag product7.image, class: "product-img" %>
    </div>
    <div class='product-info'>
      <h3 class='product-name'>
        <%= product7.product_name %>
      </h3>
      <div class='product-company'>
        <span><%= product7.company.name %></span>
      </div>
    </div>
  </div>
<% end %>
