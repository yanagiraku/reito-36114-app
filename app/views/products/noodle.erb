<% @product6.each do |product6| %>
  <div class='list'>
    <div class='product-img-content'>
      <%= image_tag product6.image, class: "product-img" %>
    </div>
    <div class='product-info'>
      <h3 class='product-name'>
        <%= product6.product_name %>
      </h3>
      <div class='product-company'>
        <span><%= product6.company.name %></span>
      </div>
    </div>
  </div>
<% end %>
