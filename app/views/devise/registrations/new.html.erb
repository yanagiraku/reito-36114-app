<header class='simple-header'>
  <%= link_to image_tag("reito-icon-blue.png", class:"reito-icon"), "/" %>
</header>

<body class="registration-lists">
  <div class="registration-second-lists">
    <%= form_with model: @user, url: user_registration_path, class: 'registration-main2', local: true do |f| %>
      <div class='form-wrap2'>
        <%=image_tag("line.png", class:"line-image")%>
        <h2 class='registration-title'>新規会員登録</h1>
      </div>
      <div class="form-group2">
        <div class='form-text-wrap2'>
          <label class="form-text">ニックネーム</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :nickname, class:"input-form", id:"nickname", placeholder:"例) furima太郎", maxlength:"40" %>
      </div>
      <div class="form-group2">
        <div class='form-text-wrap2'>
          <label class="form-text">メールアドレス</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.email_field :email, class:"input-form", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
      </div>
      <div class="form-group2">
        <div class='form-text-wrap2'>
          <label class="form-text">パスワード</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password, class:"input-form", id:"password", placeholder:"6文字以上の半角英数字" %>
        <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
      </div>
      <div class="form-group2">
        <div class='form-text-wrap2'>
          <label class="form-text">パスワード(確認)</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password_confirmation, class:"input-form", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
      </div>
      <div class="form-group2">
        <div class='form-text-wrap2'>
          <label class="form-text">年齢</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :age, class:"input-form", id:"age", placeholder:"例）30" %>
      </div>
      <div class='register-btn'>
        <%= f.submit "会員登録" , class:"register-red-btn" %>
      </div>
    <% end %>
    <div class="sign-in-group">
      <%=link_to "ログイン",new_user_session_path, class: "sign-in-second"%>
    </div>

  </div>
</body>

